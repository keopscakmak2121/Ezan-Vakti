<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_small_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_glass_bg"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="10dp"
    android:baselineAligned="false">

    <!-- İsim ve Vakit Kısmı (Sol) -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:id="@+id/widget_small_prayer_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="İKİNDİ"
            android:textColor="#FBBF24"
            android:textSize="14sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:lines="1"
            android:ellipsize="none"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="8sp"
            android:autoSizeMaxTextSize="14sp" />
        <TextView
            android:id="@+id/widget_small_prayer_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15:45"
            android:textColor="#B3FFFFFF"
            android:textSize="11sp"
            android:maxLines="1"
            android:lines="1" />
    </LinearLayout>

    <!-- Kalan Zaman (Sağ) -->
    <TextView
        android:id="@+id/widget_small_remaining_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:gravity="right"
        android:text="01:20"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"
        android:maxLines="1"
        android:lines="1"
        android:ellipsize="none"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="10sp"
        android:autoSizeMaxTextSize="18sp" />

</LinearLayout>
