<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_strip_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_glass_bg"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:baselineAligned="false">

    <TextView
        android:id="@+id/widget_strip_prayer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="İKİNDİ"
        android:textColor="#FBBF24"
        android:textSize="14sp"
        android:textStyle="bold"
        android:maxLines="1" />

    <View
        android:layout_width="1dp"
        android:layout_height="14dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="#4DFFFFFF" />

    <TextView
        android:id="@+id/widget_strip_prayer_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="15:45"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:maxLines="1" />

    <TextView
        android:id="@+id/widget_strip_remaining_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:text="01:20"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="bold"
        android:maxLines="1" />

</LinearLayout>
