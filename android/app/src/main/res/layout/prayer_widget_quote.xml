<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_quote_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_bg"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="12dp">

    <ImageView
        android:id="@+id/quote_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/ic_mosque_foreground" />

    <TextView
        android:id="@+id/widget_quote_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="“Şüphesiz namaz, müminler üzerine vakitleri belirlenmiş bir farzdır.”"
        android:textColor="#1f2937"
        android:textSize="14sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/widget_quote_source"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="— Nisâ, 103"
        android:textColor="#059669"
        android:textSize="12sp"
        android:textStyle="bold" />

</LinearLayout>
